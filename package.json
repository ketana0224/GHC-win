{
  "name": "ghc-win",
  "version": "1.0.0",
  "description": "Windows環境での検証用リポジトリです。",
  "author": "ketana0224",
  "main": "app/native/main.mjs",
  "scripts": {
    "native": "electron app/native/main.mjs",
    "start": "npm run native",
    "dist:win": "electron-builder --win msi --config.electronDist=node_modules/electron/dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.25"
  },
  "devDependencies": {
    "electron": "^35.3.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ghc.win",
    "productName": "GHCwin",
    "files": [
      "app/native/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "signAndEditExecutable": false,
      "executableName": "GHCwin",
      "target": [
        "msi"
      ]
    },
    "msi": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "warningsAsErrors": false,
      "additionalLightArgs": [
        "-sval"
      ]
    }
  }
}
